<h3 class="mb-5">我的訂單</h3>
<table id="table_id" class="display responsive nowrap">
    <thead>
        <tr>
            <th>
                編號
            </th>
            <th>
                商品名稱
            </th>
            <th>
                訂購日期
            </th>
            <th>
                購買金額
            </th>
            <th>
                訂單狀態
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.訂單)
        {

            <tr class="樣式">
                <td id="訂單編號">
                    @Html.DisplayFor(modelItem => item.訂單編號)
                </td>
                <td>
                    <a type="button" data-bs-toggle="modal" data-bs-target="#ORD" onclick="Odd('@Url.Action("OrderDE", "CustomerCenter", new {id=item.訂單編號 }, Context.Request.Scheme)',null)">@Html.DisplayFor(modelItem => item.商品名稱)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.訂購日期)
                </td>
                <td>

                    @Convert.ToInt32(item.購買金額 * item.數量)
                </td>
                <td class="statuss" id="stat" value="@item.訂單狀態">
                    @Html.DisplayFor(modelItem => item.訂單狀態)
                </td>
                @{
                    if (item.訂單狀態 == "訂單完成")
                    {
                        <td>
                            <a class="btn btn-outline-success" id="Create" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="OrderCancel('@Url.Action("CommentCreate", "CustomerCenter", new {id=item.訂單編號 }, Context.Request.Scheme)',null)">我要評論</a>
                            <a class="btn btn-outline-danger Cancel" id="Cancel" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="OrderCancel('@Url.Action("OrderCancel", "CustomerCenter", new {id=item.訂單編號 }, Context.Request.Scheme)',null)">申請取消</a>
                        </td>
                    }
                    else
                    {
                        <td>
                        </td>
                    }
                }

            </tr>
        }
    </tbody>

</table>

