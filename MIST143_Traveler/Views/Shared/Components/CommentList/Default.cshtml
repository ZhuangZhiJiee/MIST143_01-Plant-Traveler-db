@model MIST143_Traveler.MViewModel.CCommentList
@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Default";
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">

<h1>評論</h1>


<table id="table_idd">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.評論.FirstOrDefault().產品名稱)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.評論.FirstOrDefault().內容)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.評論.FirstOrDefault().分數)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.評論.FirstOrDefault().日期)
            </th>

            <th>
                <input type="hidden" @Html.DisplayNameFor(model => model.評論.FirstOrDefault().CommentID)>
            </th>
            <th>
                <input type="hidden" @Html.DisplayNameFor(model => model.評論.FirstOrDefault().CommentID)>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.評論)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.產品名稱)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.內容)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.分數)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.日期)
                </td>
                <td>
                    <a class="btn btn-outline-warning" onclick="showmodal('@Url.Action("CommentEdit","CustomerCenter",new {@item.CommentID},Context.Request.Scheme)',null)">編輯</a>
                </td>
                <td>
                    <button class="delete" value="@item.CommentID">刪除</button>
                </td>

            </tr>
        }
    </tbody>
</table>
