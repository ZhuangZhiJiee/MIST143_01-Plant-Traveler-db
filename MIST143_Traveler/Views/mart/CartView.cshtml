


@model IEnumerable<MIST143_Traveler.Models.CMartCartItem>

@{
    ViewData["Title"] = "CartView";
    Layout = "~/Views/Shared/_MartLayout.cshtml";
}

<head>
    <meta charset="UTF-8" />
    <title>Document</title>

    <link href="~/css/souvenirShop.css" rel="stylesheet" />
