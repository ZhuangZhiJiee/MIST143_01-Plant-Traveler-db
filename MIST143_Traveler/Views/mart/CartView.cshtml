</head>

<h1>我的購物車</h1>
@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                商品名稱
            </th>
            <th>
                商品圖片
            </th>
            <th>
                @Html.DisplayNameFor(model => model.count)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.小計)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{

            decimal pay = 0;
            decimal tax = 0;
            decimal sum = 0;
            foreach (var item in Model)
            {
                sum += item.小計;
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.product.FName)
                    </td>
                    <td>
                        @*@{
                            var base64 = Convert.ToBase64String(item.product.FImagePath);
                            var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                            }*@

                        <img src="~/images/All/@item.product.FImagePath" width="180" height="180" />
                        @*@Html.DisplayFor(modelItem => item.product.FImagePath)*@
                        @*@Html.DisplayFor(modelItem => item.product.FImage)*@
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.小計)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }
            tax = sum * 0.05M;
            pay = sum + tax;
        }
    </tbody>
</table>
<div style="text-align: center">
    <p>交易金額:@sum.ToString("###,###,##0")</p>
    <p>稅    額:@tax.ToString("###,###,##0")</p>
    <p>應付金額:@pay.ToString("###,###,##0")</p>
    <br />
    <br />
    <br />
    <button class="bttn2" id="counter">
        <div class="add">
            @Html.ActionLink("我要結帳", "CartView", "martController")@*3是產品FID*@
            @*<input type="submit" value="ADD TO CART" class="btn btn-default" />*@
        </div>
    </button>
</div>
