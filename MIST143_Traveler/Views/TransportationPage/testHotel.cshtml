@model MIST143_Traveler.Models.Hotel
@{
    ViewData["Title"] = "testHotel";
}

<h1>testHotel</h1>
<form action="~/TransportationPage/testHotel" method="post">
    <input asp-for="HotelId" type="text" />
    <input asp-for="HotelName" type="text" />
    <input asp-for="CityId" type="text" />
    <input type="submit" value="搜尋" />
</form>
<hr/>
@{ 
    if(Model!=null)
            {
                <h3>@Model.HotelId.@Model.HotelName 位於 @Model.CityId  </h3>
            }
}

